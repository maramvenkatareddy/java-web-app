pipeline {
  agent any
  parameters {
    choice(name: 'maven_versions', choices: ['maven_3.6', 'maven3.9'], description: 'pick up maven version')
  }
  tools {
        maven "${params.maven_versions}"
    }
  stages {
    stage('clone the application code') {
      steps {
        git branch: 'sonar', url: 'https://github.com/maramvenkatareddy/java-web-app.git'
      }
    }
    stage('build the application code usingmaven tool') {
      steps {
        sh "mvn package"
      }
    }
  }
}
