pipeline {
    agent any
    triggers {
        pollSCM('* * * * *')
    }
    environment {
                // Define the target repository in Artifactory
                TARGET_REPO = 'java1-libs-release-local'
            }
    stages {
        stage('Clone the code from GitHub') {
            steps {
                git branch: 'sonar', url: 'https://github.com/maramvenkatareddy/java-web-app.git'
            }
        }
        stage('build') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Build the code and SonarQube analysis') {
            steps {
                script {
                    try {
                        def server = Artifactory.newServer url: 'https://veenan.jfrog.io/artifactory', credentialsId: 'jfrog'
                        def uploadSpec = """{
                            "files": [
                                {
                                    "pattern": "target/*.jar",
                                    "target": "${TARGET_REPO}/"
                                }
                            ]
                        }"""
                        
                        server.upload(uploadSpec)
                    } catch (Exception e) {
                        error("Failed to deploy artifacts to Artifactory: ${e.message}")
                    }
                }
            }
        }
       
    }
}
