pipeline {
    agent { label 'master' }
    triggers {
        pollSCM('* * * * *')
    }
    tools {
       jfrog 'jfrog-cli'
    }
    environment {
        // Define the credentials IDs
        JFROG_CREDENTIALS_ID = 'maven-jaa-id'
        ARTIFACTORY_URL = 'https://jfrogvenkat3533.jfrog.io/artifactory'
        TARGET_REPO = 'maven-jaaaa/'
    }
    stages {
        stage('Clone the code from GitHub') {
            steps {
                git branch: 'sonar', url: 'https://github.com/maramvenkatareddy/java-web-app.git'
            }
        }
        stage('Build the code and SonarQube analysis') {
            steps {
                script {
                    def scannerHome = tool name: 'sonarqube', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
                }
                withSonarQubeEnv('sonarqube') {
                    sh "mvn clean install sonar:sonar -Dsonar.projectKey=Java -Dsonar.host.url=http://20.84.49.119:32768/"
                }
            }
        }
    }
}
